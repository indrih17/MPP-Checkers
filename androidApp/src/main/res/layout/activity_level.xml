<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/checkers"
    android:orientation="vertical">

    <Button
        android:id="@+id/human_vs_human_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:background="@android:color/white"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:text="Человек против человека" />

    <Button
        android:id="@+id/human_vs_ai_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:background="@android:color/white"
        android:enabled="false"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:text="Человек против ИИ" />

    <Button
        android:id="@+id/ai_vs_ai_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@android:color/white"
        android:enabled="true"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:text="ИИ против ИИ" />
</RelativeLayout>